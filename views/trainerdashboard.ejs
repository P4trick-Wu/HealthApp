<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"
    /> -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Trainer Dashboard</title>
  </head>
  <body>
    <h1>Dashboard</h1>

    <a href="/logout">Logout</a>

    <h4>Hello <%= user %></h4>
    <h5>ID: <%= id %></h5>
    <h5>Usertype: Trainer</h5>

    <!-- Steps counter card -->
    <div class="card" style="width: 18rem">
      <div class="card-body">
        <h5 class="card-title">Steps</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          Steps taken today
        </h6>
        <p class="card-text" id="stepCountText"><%= stepcount %></p>
        <h6 class="card-subtitle mb-2 text-body-secondary">Daily steps goal</h6>
        <p class="card-text" id="stepGoalText"><%= stepgoal %></p>

        <!-- Modal for updating data -->
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Update Data
        </button>

        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <!-- Input fields for updating data -->
              <div class="modal-body">
                <form>
                  <div class="mb-3">
                    <label for="updateStepCount" class="form-label"
                      >Update step count</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      id="updateStepCount"
                      min="0"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="updateStepGoal" class="form-label"
                      >Update daily step goal</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      id="updateStepGoal"
                      min="0"
                    />
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button
                  type="button"
                  class="btn btn-primary"
                  id="stepsUpdateButton"
                  data-bs-dismiss="modal"
                >
                  Save changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

  <script src="js/dashScript.js"></script>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>
