<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"
    /> -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Trainer Dashboard</title>
  </head>
  <body>
    <h1>Dashboard</h1>

    <a href="/logout">Logout</a>

    <h4>Hello <%= user %></h4>
    <h5>ID: <%= id %></h5>
    <h5>Usertype: Trainer</h5>

    <!-- Schedule management card card -->
    <div class="card" style="width: 25rem">
      <div class="card-body">
        <h5 class="card-title">Your schedule</h5>

        <p class="card-text">View your sessions</p>

        <a href="#" class="btn btn-primary" id="viewSchedulesButton"
          >Get Sessions</a
        >
      </div>

      <!-- List of sessions -->
      <ul id="sessionsList" style="list-style-type: none"></ul>

      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-body-secondary">
          Set new schedule below!
        </h6>
        <!-- Modal for creating and uploading a new availalbe session schedule -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Upload timeslot
        </button>

        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <!-- Input fields for updating data -->
              <div class="modal-body">
                <form>
                  <!-- session title -->
                  <div class="mb-3">
                    <label for="newTitle" class="form-label">Title</label>
                    <input type="text" class="form-control" id="newTitle" />
                  </div>
                  <!-- date, start time input -->
                  <div class="mb-3">
                    <label for="newDateTime" class="form-label"
                      >Input date and start time</label
                    >
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="newDateTime"
                    />
                  </div>
                  <!-- end time -->
                  <div class="mb-3">
                    <label for="newEndTime" class="form-label"
                      >Input end time</label
                    >
                    <input type="time" class="form-control" id="newEndTime" />
                  </div>
                  <!-- session cost -->
                  <div class="mb-3">
                    <label for="newCost" class="form-label">session cost</label>
                    <input
                      type="number"
                      class="form-control"
                      id="newCost"
                      min="0"
                    />
                  </div>
                  <!-- session capacity -->
                  <div class="mb-3">
                    <label for="newCapacity" class="form-label">Capacity</label>
                    <input
                      type="number"
                      class="form-control"
                      id="newCapacity"
                      min="1"
                    />
                  </div>
                  <!-- pick room -->
                  <div class="dropdown">
                    <button
                      class="btn btn-secondary dropdown-toggle"
                      type="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                      id="getRooms"
                      onclick="findRooms()"
                    >
                      Select room below
                    </button>
                    <ul class="dropdown-menu" id="availableRooms"></ul>
                  </div>
                  <div id="chosenRoom"></div>
                </form>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button
                  type="button"
                  class="btn btn-primary"
                  id="newScheduleButton"
                  data-bs-dismiss="modal"
                >
                  Save changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- card for members member profile viewing -->
    <div class="card" style="width: 25rem">
      <h5 class="card-header">Member profile viewing</h5>
      <div class="card-body">
        <p class="card-text">
          Search for members by name. <br />Empty field returns all members
        </p>

        <div class="mb-3">
          <input type="text" class="form-control" id="memberSearch" />
        </div>
        <a href="#" class="btn btn-primary" id="memberSearchButton">Search</a>
      </div>
      <div class="card-body">
        <p class="card-text">Members:</p>

        <!-- List of members -->
        <ul id="membersList">
          <% for (var i = 0; i < members.length ; i++) { %>
          <li>Name: <%= members[i].name %>, Email: <%= members[i].email %></li>
          <% } %>
        </ul>
      </div>
    </div>
  </body>

  <script src="js/trainerdashScript.js"></script>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>
